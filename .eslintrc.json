{
	"extends": [
		"plugin:astro/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"overrides": [
		{
			"files": [
				"*.astro"
			],
			"parser": "astro-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser",
				"extraFileExtensions": [
					".astro"
				]
			}
		}
	],
	"rules": {
		"no-extra-semi": "error",
		"astro/semi": [
			"error",
			"never"
		]
	}
}