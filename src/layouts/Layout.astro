---
import Header from '@components/Header.astro'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Gonzalo Manco Portafolio web' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='./images/logo.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='bg-dark text-white'>
		<Header />
		<main
			class='desktop-sm:px-32 desktop:px-14 tablet:px-12 pt-5 pb-20 mobile:px-4 max-w-[1440px] mx-auto'
		>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300&display=swap');

	@font-face {
		font-family: 'GT Walsheim Pro';
		src: url('/portfolio/fonts/WalsheimPro-Medium.woff2') format('woff2');
		font-weight: 500;
		font-display: swap;
	}

	html {
		scroll-behavior: smooth;
	}

	svg:not(.not_svg) {
		@apply transition-transform duration-500 hover:scale-110;
	}

	#nav_experiences ul li.active {
		background-image: linear-gradient(90deg, #6964de, #fca6e9);
		border-left: solid 1px #ffffff;
	}
</style>
