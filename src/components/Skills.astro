import Javascript from './icons/v1/Javascript.astro'
import NextJS from './icons/v1/Next.astro'
import Node from './icons/v1/Node.astro'
import Tailwind from './icons/v1/Tailwind.astro'
import Typescript from './icons/v1/Typescript.astro'
