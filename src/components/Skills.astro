	<h1 class='text-md uppercase'>Tecnologías y Habilidades</h1>
	<div class='mt-10'>
		<h2 class='text-center text-xl'>Tecnologías que uso diariamente</h2>
		<WrapBlur>
			<div class='justify-self-center'>
				<React />
			</div>
			<div class='justify-self-center'>
				<Javascript />
			</div>
			<div class='justify-self-center'>
				<Typescript />
			</div>
			<div class='justify-self-center'>
				<Css />
			</div>
			<div class='justify-self-center'>
				<Html />
			</div>
			<div class='justify-self-center'>
				<Git />
			</div>
			<div class='justify-self-center'>
				<Github />
			</div>
			<div class='justify-self-center'>
				<Tailwind />
			</div>
			<div class='justify-self-center'>
				<Node />
			</div>
			<div class='justify-self-center'>
				<NextJS />
			</div>
		</WrapBlur>
	</div>
	<div class='mt-10'>
		<h2 class='text-center text-xl'>Tecnologías que use en proyectos</h2>
		<WrapBlur>
			<div class='justify-self-center'>
				<Reactv2 />
			</div>
			<div class='justify-self-center'>
				<Javascriptv2 />
			</div>
			<div class='justify-self-center'>
				<Typescriptv2 />
			</div>
			<div class='justify-self-center'>
				<Nodev2 />
			</div>
			<div class='justify-self-center'>
				<Cssv2 />
			</div>
			<div class='justify-self-center'>
				<Tailwindv2 />
			</div>
			<div class='justify-self-center'>
				<Gitv2 />
			</div>
			<div class='justify-self-center'>
				<Mongo />
			</div>
			<div class='justify-self-center'>
				<Postgre />
			</div>
			<div class='justify-self-center'>
				<Nextjsv2 />
			</div>
		</WrapBlur>
	</div>
</section>
